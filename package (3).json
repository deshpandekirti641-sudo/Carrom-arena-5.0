{
  "name": "carrom-arena",
  "version": "1.0.0",
  "description": "Real-money Carrom gaming application with 1v1 matches, OTP verification, and automated wallet management for Indian users",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules/.cache",
    "export": "next build && next export",
    "analyze": "cross-env ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "test": "echo \"No tests specified\" && exit 0",
    "test:e2e": "playwright test",
    "docker:build": "docker build -t carrom-arena:latest .",
    "docker:run": "docker run -p 3000:3000 carrom-arena:latest",
    "security:audit": "npm audit --audit-level=high",
    "deps:check": "npx depcheck",
    "deps:update": "npx npm-check-updates -u",
    "precommit": "npm run lint && npm run type-check",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@farcaster/miniapp-sdk": "^0.1.10",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-accordion": "^1.2.10",
    "@radix-ui/react-alert-dialog": "^1.1.13",
    "@radix-ui/react-aspect-ratio": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-collapsible": "^1.1.10",
    "@radix-ui/react-command": "^1.1.1",
    "@radix-ui/react-context-menu": "^2.2.14",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-hover-card": "^1.1.13",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-menubar": "^1.1.14",
    "@radix-ui/react-navigation-menu": "^1.2.12",
    "@radix-ui/react-popover": "^1.1.13",
    "@radix-ui/react-progress": "^1.1.6",
    "@radix-ui/react-radio-group": "^1.3.6",
    "@radix-ui/react-scroll-area": "^1.2.8",
    "@radix-ui/react-select": "^2.2.4",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slider": "^1.3.4",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.8",
    "@radix-ui/react-toggle-group": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.12.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.511.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "phaser": "^3.70.0",
    "react": "19.1.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.56.3",
    "react-resizable-panels": "^3.0.2",
    "recharts": "^2.15.3",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.1.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "20.17.47",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-check-updates": "^16.14.12",
    "postcss": "^8",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.1",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "carrom",
    "gaming",
    "real-money",
    "india",
    "nextjs",
    "phaser",
    "otp-verification",
    "wallet",
    "upi",
    "netbanking"
  ],
  "author": "Carrom Arena Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/carrom-arena.git"
  },
  "homepage": "https://carrom-arena.vercel.app",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run security:audit"
    }
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}